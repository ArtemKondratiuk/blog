{% extends 'admin/dashboard.html.twig' %}

{% block title %}Hi admin!{% endblock %}
    {% block stylesheets %}
        {{ parent() }}
        <link rel="stylesheet" type="text/css" href="{{ asset('build/css/admin/index.css') }}" />
    {% endblock %}

{% block body %}

    {% block aside %}
        {{ parent() }}
    {% endblock %}

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>email</th>
            {#<th>role</th>#}
            {#<th>Show</th>#}
            <th>Edit</th>
        </tr>
        </thead>
        <tbody>
        {% for user in pagination %}
            <tr>
                <td>{{ user.id }}</td>
                <td>{{ user.firstName }}</td>
                <td>{{ user.lastName }}</td>
                <td>{{ user.email }}
                {#{% for roles in user %}#}
                    {#<td> {{ user.roles }}</td>#}
                {#{% endfor %}#}
                {#<td class="show"> <a href="{{ path('article_show', {'id': article.id}) }}">show</a> </td>#}
                <td class="edit"> <a href="{{ path('user-edit', {'id': user.id}) }}">edit</a> </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <div class="navigation pager clearfix">
        {{ knp_pagination_render(pagination) }}
    </div>

{% endblock %}
